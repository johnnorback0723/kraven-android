<resources xmlns:tools="http://schemas.android.com/tools">
	
	<!-- Base application theme. -->
	<style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowDisablePreview">true</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:splitMotionEvents">false</item>
		<item name="android:windowEnableSplitTouch">false</item>
		<item name="android:windowContentTransitions">true</item>
		<item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
		<item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent</item>
	</style>

	<style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
		<item name="cornerSize">@dimen/_30sdp</item>
	</style>

	<style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
		<item name="android:minWidth">0dip</item>
		<item name="android:paddingStart">@dimen/_10sdp</item>
		<item name="android:paddingEnd">@dimen/_10sdp</item>
	</style>


	<style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
		<item name="android:background">@color/black_overlay</item>
	</style>
	
	<style name="Error.Appearance" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/_12ssp</item>
	</style>
	
	
	<style name="TextLabel" parent="TextAppearance.Design.Hint">
		<item name="android:textSize">@dimen/_12ssp</item>
	</style>
	
	
	<style name="AuthTextInputLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColorHint">#80ffffff</item>
		<item name="android:fontFamily">@font/work_sans_light</item>
	
	</style>
	
	<style name="AuthTextInputLayout.Black">
		<item name="colorControlNormal">#c5c5c5</item>
		<item name="colorControlActivated">#c5c5c5</item>
		<item name="colorControlHighlight">#c5c5c5</item>
		<item name="android:textColorHint">#80000000</item>
	</style>
	
	<style name="auth_heading_textview">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:fontFamily">@font/work_sans_medium</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/_17ssp</item>
	</style>
	
	
	<style name="AuthEditTextColorBlack">
		<item name="colorControlNormal">#80000000</item>
		<item name="colorControlActivated">#80000000</item>
		<item name="colorControlHighlight">#000000</item>
	</style>
	
	<style name="AuthEditTextColor">
		<item name="colorControlNormal">#ffffff</item>
		<item name="colorControlActivated">#80ffffff</item>
		<item name="colorControlHighlight">#ffffff</item>
	</style>
	
	<style name="AuthEditText.Black">
		<item name="android:backgroundTint">@color/black</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textCursorDrawable">@color/black</item>
	</style>
	
	
	<style name="AuthEditText.Gray">
		<item name="android:backgroundTint">@color/dark_gray</item>
		<item name="android:textColor">@color/black</item>
	
	</style>
	
	<style name="AuthEditText">
		<item name="android:textAlignment">viewStart</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:backgroundTint">#ffffff</item>
		<item name="android:fontFamily">@font/work_sans_medium</item>
		<item name="android:imeOptions">actionUnspecified</item>
		<item name="android:paddingTop">@dimen/_8sdp</item>
		<item name="android:paddingBottom">@dimen/_8sdp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">@dimen/_12ssp</item>
	</style>
	
	<style name="AuthEditText.Disable">
		<item name="android:cursorVisible">false</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:focusable">false</item>
		<item name="android:backgroundTint">@color/dark_gray</item>
	</style>
	
	<style name="AuthEditText.Disable.Black">
		<item name="android:textColorPrimary">@color/dark_gray</item>
		<item name="android:textColor">@color/black</item>
		<item name="colorControlNormal">#c5c5c5</item>
		<item name="colorControlActivated">#c5c5c5</item>
		<item name="colorControlHighlight">#c5c5c5</item>
	</style>
	
	<style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorControlNormal">@color/light_gray</item>
		<item name="colorControlActivated">@color/light_gray</item>
		<item name="colorControlHighlight">@color/light_gray</item>
	</style>
	
	
	<style name="SettingTextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:fontFamily">@font/work_sans_regular</item>
		<item name="android:paddingTop">@dimen/_10sdp</item>
		<item name="android:paddingBottom">@dimen/_10sdp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">@dimen/_14sdp</item>
		<item name="android:drawableEnd">@drawable/ic_chevron_right</item>
	</style>
	
	<style name="AuthHeadingTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:fontFamily">@font/work_sans_medium</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/_17ssp</item>
	</style>
	
	<style name="AuthHeadingTextView.TextViewCommonLayout">
		<item name="android:textSize">@dimen/_12ssp</item>
		<item name="android:fontFamily">@font/work_sans_regular</item>
	</style>
	
	<style name="AuthHeadingTextView.TextViewCommonLayoutBold">
		<item name="android:textSize">@dimen/_12ssp</item>
		<item name="android:fontFamily">@font/poppins_bold_0</item>
	</style>
	
	<style name="AuthHeadingTextView.TextViewCommonLayoutMedium">
		<item name="android:textSize">@dimen/_12ssp</item>
		<item name="android:fontFamily">@font/work_sans_medium</item>
	</style>
	
	
	<!--Restaurant Details-->
	<style name="cardView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginStart">@dimen/_10sdp</item>
		<item name="android:layout_marginEnd">@dimen/_10sdp</item>
		<item name="android:layout_marginTop">@dimen/_10sdp</item>
		<item name="android:elevation">@dimen/_10sdp</item>
	
	</style>
	
	<style name="ButtonStyle" parent="@android:style/Widget.Holo.Button">
		<item name="android:focusable">true</item>
		<item name="android:focusableInTouchMode">true</item>
		<item name="android:clickable">true</item>
		<item name="android:textColor">@color/black</item>
	</style>
	
	<!--Bottom Sheet Fragment -->
	<style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
		<item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
	</style>
	
	<style name="DialogAnimation">
		<item name="android:windowEnterAnimation">@anim/zoom_in</item>
		<item name="android:windowExitAnimation">@anim/zoom_out</item>
	</style>
	
	<style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:padding">0dp</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>
	
	<style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowBackground">@null</item>
		<item name="bottomSheetStyle">@style/BottomSheet</item>
	</style>
	
	<style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
	
	<style name="TabBarStyle" parent="TextAppearance.Design.Tab">
		<item name="android:fontFamily">@font/work_sans_regular</item>
		<item name="textAllCaps">false</item>
		<item name="android:textSize">@dimen/_12ssp</item>
	</style>
	
	
	<style name="DashButtonStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:fontFamily">@font/work_sans_medium</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/light_blue</item>
		<item name="android:textSize">@dimen/_11ssp</item>
	</style>
	
	
	<style name="CartTextView">
		<item name="android:layout_marginTop">@dimen/_10sdp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:fontFamily">@font/work_sans_regular</item>
		<item name="android:textColor">@color/orange</item>
		<item name="android:textSize">@dimen/_16ssp</item>
	</style>
	
	<style name="NormalTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:fontFamily">@font/work_sans_regular</item>
		<item name="android:textColor">@color/dark_gray</item>
		<item name="android:textSize">@dimen/_12ssp</item>
	</style>
	
	<style name="NormalTextView.SetTextView">
		<item name="android:textColor">@color/black</item>
		<item name="android:fontFamily">@font/work_sans_medium</item>
	</style>
	
	<style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
		<item name="android:button">@drawable/radio_button_payment_type</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">start</item>
		<item name="android:textAlignment">textStart</item>
		<item name="android:layout_marginTop">@dimen/_15sdp</item>
		<item name="android:fontFamily">@font/work_sans_medium</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/_12ssp</item>
		<item name="android:layoutDirection">rtl</item>
	</style>
	
	<style name="CommonButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:fontFamily">@font/work_sans_bold</item>
		<item name="android:paddingStart">@dimen/_50sdp</item>
		<item name="android:paddingEnd">@dimen/_50sdp</item>
		<item name="android:paddingTop">@dimen/_12sdp</item>
		<item name="android:paddingBottom">@dimen/_12sdp</item>
		<item name="android:gravity">center</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textSize">@dimen/_12ssp</item>
		<item name="android:textColor">@color/white</item>
	
	</style>
	
	<style name="CommonButton.Cancel">
		<item name="android:textColor">@color/orange</item>
	
	</style>
	
	<style name="EditProfileTextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">@dimen/_10sdp</item>
		<item name="android:drawableEnd">@drawable/ic_chevron_right</item>
		<item name="android:fontFamily">@font/work_sans_regular</item>
		<item name="android:paddingTop">@dimen/_7sdp</item>
		<item name="android:paddingBottom">@dimen/_7sdp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/_14ssp</item>
	</style>
	
	<style name="ErrorAppearanceTextInputLayout">
		<item name="android:textColor">@color/black</item>
	</style>
	
	
	<style name="EditText_Base">
		<item name="android:textSize">@dimen/_14ssp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textColorHint">@color/white</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">start|center_vertical</item>
	</style>
	
	<style name="EditText_Transparent" parent="EditText_Base">
		<item name="android:padding">@dimen/_10sdp</item>
		<item name="android:layout_marginStart">@dimen/_20sdp</item>
		<item name="android:layout_marginEnd">@dimen/_20sdp</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">@dimen/_12ssp</item>
		<item name="android:textColorHint">@color/dark_gray</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:lines">1</item>
		<item name="android:textCursorDrawable">@null</item>
		
		<item name="android:maxLines">1</item>
	</style>
	
	<style name="disable">
		<item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:clickable">false</item>
	</style>
	
	<style name="enable">
		<item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:clickable">true</item>
	</style>
</resources>

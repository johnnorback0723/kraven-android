<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<View
		android:id="@+id/viewTopBg"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:background="@drawable/rating_bg"
		app:layout_constraintHeight_percent="0.4"
		app:layout_constraintTop_toTopOf="parent" />
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/textViewCurrentBalanceLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/work_sans_regular"
		android:text="@string/current_balance"
		android:textColor="@color/white"
		android:textSize="@dimen/_12ssp"
		
		app:layout_constraintBottom_toTopOf="@+id/textViewCurrentBalance"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed" />
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/textViewCurrentBalance"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/work_sans_bold"
		android:textColor="@color/white"
		android:textSize="@dimen/_20ssp"
		app:layout_constraintBottom_toTopOf="@+id/buttonAddMoney"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewCurrentBalanceLabel"
		tools:text="$50" />
	
	<com.google.android.material.button.MaterialButton
		android:id="@+id/buttonAddMoney"
		style="@style/CommonButton"
		android:layout_marginTop="@dimen/_10sdp"
		android:layout_marginBottom="@dimen/_30sdp"
		android:paddingStart="@dimen/_15sdp"
		android:paddingTop="@dimen/_5sdp"
		android:paddingEnd="@dimen/_15sdp"
		android:paddingBottom="@dimen/_5sdp"
		android:text="@string/add_money"
		app:cornerRadius="@dimen/_20sdp"
		app:icon="@drawable/ic_wallet_add"
		app:layout_constraintBottom_toBottomOf="@id/viewTopBg"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewCurrentBalance"
		app:strokeColor="@color/white"
		app:strokeWidth="@dimen/_1sdp" />
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/textViewTransactionDetails"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/_15sdp"
		android:layout_marginTop="@dimen/_10sdp"
		android:fontFamily="@string/menu"
		android:text="@string/transaction_details"
		android:textColor="@color/orange"
		android:textSize="@dimen/_16ssp"
		app:fontFamily="@font/work_sans_medium"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/viewTopBg" />
	
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/recyclerViewTransactionList"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginStart="@dimen/_15sdp"
		android:layout_marginTop="@dimen/_10sdp"
		android:layout_marginEnd="@dimen/_15sdp"
		android:overScrollMode="never"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewTransactionDetails" />


</androidx.constraintlayout.widget.ConstraintLayout>

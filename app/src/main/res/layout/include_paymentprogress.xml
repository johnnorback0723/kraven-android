<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_32sdp"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_orange_white_wrapper"
            android:contentDescription="@string/app_name"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:textSize="@dimen/_38ssp"
            android:fontFamily="@font/typo_round_bold_demo"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_128sdp"
        android:src="@drawable/payment_sand_wait_wrapper"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/textViewAddressType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center"
        android:paddingTop="@dimen/_16sdp"
        android:text="We are processing your payment hang tight"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp" />

</LinearLayout>
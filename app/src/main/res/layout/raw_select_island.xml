<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/imageViewIsland"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="@dimen/_10sdp"
		android:scaleType="centerCrop"
		android:src="@drawable/test"
		app:layout_constraintDimensionRatio="16:9"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/imageViewSelection"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/_10sdp"
		android:background="@drawable/checkbox_island"
		app:layout_constraintEnd_toEndOf="@+id/imageViewIsland"
		app:layout_constraintTop_toTopOf="@+id/imageViewIsland" />
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/imageViewGradiant"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="@+id/imageViewIsland"
		app:layout_constraintEnd_toEndOf="@+id/imageViewIsland"
		app:layout_constraintStart_toStartOf="@+id/imageViewIsland"
		app:layout_constraintTop_toTopOf="@+id/imageViewIsland" />
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/textViewTopIslandName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/_10sdp"
		android:fontFamily="@font/work_sans_extra_bold"
		android:textColor="#80ffffff"
		android:textSize="@dimen/_30ssp"
		app:layout_constraintBottom_toTopOf="@+id/textViewIslandName"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		tools:text="Grand Bahama" />
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/textViewIslandName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/_10sdp"
		android:fontFamily="@font/work_sans_extra_bold"
		android:textColor="@color/white"
		android:textSize="@dimen/_20ssp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		tools:text="Grand Bahama" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutForgotDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/_15sdp"
    android:paddingTop="@dimen/_20sdp"
    android:paddingEnd="@dimen/_15sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_medium"
        android:text="@string/please_select_image"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawableTop="@drawable/ic_photo_camera"
        android:drawablePadding="@dimen/_10sdp"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/take_photo"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toStartOf="@+id/textViewGallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelectImage" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewGallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawableTop="@drawable/ic_gallery"
        android:drawablePadding="@dimen/_10sdp"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/select_photo"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCamera"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelectImage" />


</androidx.constraintlayout.widget.ConstraintLayout>